<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>Clash of Virtual Machines</title>
	<link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
	<script src="js/modernizr.custom.js"></script>
</head>
<body>
	<div id="page">
		<div id="header">
			<div class="background">
				<h1 id="logo"> <a href="index.html">Clash of Virtual Machines</a> </h1>
				<div id="navigation">
					<ul>
						<li class="selected">
							<a href="vote">Votación</a>
						</li>
						<li class="selected">
							<a href="results">Resultados</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<div id="contents">
			<div id="adbox">
				<div id=centered >
					<%= if @voted do %>
					  ¡¡¡ Gracias por tu voto !!!
					<% else %>
						<%= form_for @changeset, "/register_vote", fn f -> %>
							<%= for vm <- @vms do %>
							  <input type="radio" id="<%= vm.name %>" name="vm" value="<%= vm.name %>" />
							  <label for="<%= vm.name %>"><span></span><%= vm.name %></label><br>
							<% end %>
							<button type="submit" class="button">Buscar</button>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
		<div id="footer">
			<div class="background">
				<div class="body">
					<p id="footnote">
						© Copyright 2023. All rights reserved.
					</p>
				</div>
			</div>
		</div>
	</div>
</body>
</html>